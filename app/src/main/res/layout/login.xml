<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/easerColor"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_bouteilles_nobackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="10dp"
            android:fontFamily="@font/orator"
            android:text="easer"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="45sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="left"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/border_facebook_connect"
        android:drawableLeft="@drawable/facebook_logo_small"
        android:fontFamily="@font/weblysleekuil"
        android:gravity="left"
        android:paddingLeft="70dp"
        android:text="@string/facebook_connect"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:ems="9"
        android:fontFamily="@font/weblysleekuil"
        android:padding="0dp"
        android:text="@string/why_facebook"
        android:textAlignment="center"
        android:textColor="@color/why_facebook" />

</LinearLayout>