<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_plus"
    android:orientation="vertical">

    <TextView
        android:id="@+id/set_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/weblysleekuil"
        android:gravity="center"
        android:text="@string/set_phone_number"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/border_easer_color_validate"
        android:fontFamily="@font/weblysleekuil"
        android:gravity="center"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:paddingTop="4dp"
        android:paddingRight="15dp"
        android:paddingBottom="4dp"
        android:textColor="@color/easerColor"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/border_grey_validate"
            android:fontFamily="@font/weblysleekuil"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:stateListAnimator="@null"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/dark_grey"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>